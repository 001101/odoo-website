<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <template id="layout" inherit_id="website.layout" name="Select2 Search Field">
            <xpath expr="//t[@t-call-assets='website.assets_frontend']" position="before">
                <link href="/website_bootstrap_select2/static/src/css/select2.min.css" rel="stylesheet"/>
            </xpath>
            <xpath expr="//body" position="inside">
                <script type="text/javascript" src="/website_bootstrap_select2/static/src/js/select2.min.js"/>
                <script type="text/javascript">
                    $(document).ready(function() {
                        $('.oe_select2_search').select2();
                    });
                </script>
            </xpath>
        </template>

    </data>
</openerp>
