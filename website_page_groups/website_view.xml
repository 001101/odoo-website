<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="website.default_page">
            <t t-call="website.layout">
                <t t-call="website_page_groups.publish_management"/>
                <t t-if="request.website.get_template(path).can_view">
                    <div id="wrap" class="oe_structure oe_empty"/>
                </t>
            </t>
        </template>

        <template id="js_extend" inherit_id="website.layout">
            <xpath expr="//body" position="inside">
                <script src="/website_page_groups/static/src/js/main.js"/>
            </xpath>
        </template>

        <template id="publish_management">
            <t t-call="website.publish_management" >
                <t t-set="object" t-value="request.website.get_template(path)"/>
                <li>
                    <a id="set_groups" href="#" class="" data-groups="base.group_user,base.group_website_designer,base.group_website_publisher">Set Employees</a>
                </li>
                <li>
                    <a id="remove_groups" href="#" class="" data-groups="">Remove Groups</a>
                </li>
            </t>
        </template>


    </data>
</openerp>
